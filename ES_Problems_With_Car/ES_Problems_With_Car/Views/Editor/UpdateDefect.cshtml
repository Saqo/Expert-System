@model ES_Problems_With_Car.Car_Defects

@{
    ViewBag.Title = "UpdateDefect";
    var id = "Идентификатор";
    var answer = "Неисправность";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <fieldset>
        <legend>Форма редактирования</legend>
        <ol class="custom-list">
            <li>
                @Html.Label(id)
                @Html.DisplayTextFor(m => m.ID)
            </li>
            <li>
                @Html.Label(answer)
                @Html.TextBoxFor(m => m.Answer)
            </li>
            @Html.HiddenFor(m => m.ReasonID)
            @Html.HiddenFor(m => m.WasViewed)
            @Html.HiddenFor(m => m.IsSelected)
            @Html.HiddenFor(m => m.IsDeleted)
        </ol>
        <a href="@Url.Action("CancelUpdateDefect", new { id = Model.ID })"><input type="button" value="Отмена" /></a>
        <input type="submit" value="Обновить узел" />
    </fieldset>
}

