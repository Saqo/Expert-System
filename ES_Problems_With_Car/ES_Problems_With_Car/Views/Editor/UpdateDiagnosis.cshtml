@model ES_Problems_With_Car.Reasons_Diagnosis

@{
    ViewBag.Title = "UpdateDiagnosis";
    var id = "Идентификатор";
    var answer = "Способ диагности неисправности";
}

<h2>UpdateDiagnosis</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <fieldset>
        <legend>Форма редактирования</legend>
        <ol class="custom-list">
            <li>
                @Html.Label(id)
                @Html.DisplayTextFor(m => m.ID)
            </li>
            <li>
                @Html.Label(answer)
                @Html.TextBoxFor(m => m.Answer)
            </li>
            @Html.HiddenFor(m => m.IsDeleted)
        </ol>
        <div class="submit-active">
            <a href="@Url.Action("CancelUpdateDiagnosis", new { id = Model.ID })"><input type="button" value="Отмена" /></a>
            <input type="submit" value="Обновить узел" />
        </div>
    </fieldset>
}

